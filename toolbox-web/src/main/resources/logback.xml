<configuration debug="false">
    <springProperty scope="context" name="appname" source="spring.application.name"/>
    <!-- 请配置项目名称 -->
    <property name="basedir" value="/usr/log/applog" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="com.llpay.framework.autoconfigure.logging.logback.SecurePatternLayoutEncoder">
            <encrypt>true</encrypt>
            <encryptKeys>cardno cardNumber bankacct id_no bind_mob</encryptKeys>
            <partialEncryptKeys>cardno|64 cardNumber|64 bankacct|64 id_no|11 bind_mob|34</partialEncryptKeys>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="bizlogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${basedir}/${appname}.log</file>
        <append>true</append>
        <encoder class="com.llpay.framework.autoconfigure.logging.logback.SecurePatternLayoutEncoder">
            <encrypt>true</encrypt>
            <encryptKeys>mobile cardno cardNumber bankacct id_no bind_mob</encryptKeys>
            <partialEncryptKeys>mobile|23 cardno|64 cardNumber|64 bankacct|64 id_no|11 bind_mob|34</partialEncryptKeys>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - [%tid] -%msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${basedir}/${appname}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>150MB</maxFileSize>
        </rollingPolicy>
        <!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter> -->
    </appender>

    <springProfile name="!prd">
        <logger name="org.springframework" level="INFO"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="bizlogFile"/>
        </root>
    </springProfile>

    <springProfile name="prd">
        <logger name="org.springframework" level="ERROR"/>
        <root level="INFO">
            <appender-ref ref="bizlogFile"/>
        </root>
    </springProfile>
</configuration>